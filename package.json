{
  "name": "dailyfit",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "dev:client": "vite",
    "dev:server": "node server/index.js",
    "dev": "concurrently -n FRONTEND,BACKEND -c blue,green \"pnpm dev:client\" \"pnpm dev:server\"",
    "server": "cross-env NODE_ENV=production node server/index.js",
    "build": "tsc && vite build",
    "start": "pnpm run build && pnpm run server",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css,scss,md}\"",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run format && pnpm run lint"
    }
  },
  "dependencies": {
    "@mantine/core": "^8.3.7",
    "@mantine/dates": "^8.3.7",
    "@mantine/hooks": "^8.3.7",
    "@mantine/modals": "^8.3.7",
    "@mantine/notifications": "^8.3.7",
    "@tabler/icons-react": "^3.35.0",
    "axios": "^1.13.2",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "echarts": "^6.0.0",
    "express": "^4.21.2",
    "framer-motion": "^12.23.24",
    "lottie-react": "^2.4.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "react-hook-form": "^7.66.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
}
